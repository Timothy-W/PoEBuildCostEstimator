@model IEnumerable<BuildCostEstimator.Models.Item>

@{
    double totalCost = 0.0;

    foreach (var item in Model)
    {
        totalCost += item.CostInChaos;
    }

}


<table class="table">
    <thead>
        <th>Total Cost: @Math.Ceiling(totalCost) Chaos</th>
    </thead>
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CostInChaos)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BaseType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Rarity)
        </th>
        <!--<th>
            @Html.DisplayNameFor(model => model.PobItemId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ItemLevel)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LevelReq)
        </th>-->
        <th></th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model.OrderByDescending(x => x.CostInChaos))
    {
        <!--Item partial-->
        <partial name="_Item" model="item"/>
    }
    </tbody>
</table>
